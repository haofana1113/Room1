<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/room1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mainpackage"
            android:id="@+id/main_package"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/main_package"
            android:id="@+id/main_package_1"
            android:layout_marginStart="12dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/room1_tv"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/main_package_1"
            android:layout_marginStart="21dp"
            android:id="@+id/room1_package"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/room1_tv"
            android:layout_marginEnd="39dp"
            android:id="@+id/room1_door"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/back"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_above="@+id/room1_package"
            android:layout_alignEnd="@+id/room1_door"
            android:id="@+id/package_open1"/>





</RelativeLayout>


